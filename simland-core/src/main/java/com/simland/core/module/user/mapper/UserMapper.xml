<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//ibatis.apache.org//DTD Mapper 3.0//EN"
"http://ibatis.apache.org/dtd/ibatis-3-mapper.dtd">


<!-- 不使用namespace的话sql搜索定位会比较方便 -->
<mapper namespace="com.simland.core.module.user.mapper.UserMapper">

	<resultMap id="UserRM" type="com.simland.core.module.user.entity.User">
		<result property="id" column="id" />
		<result property="uname" column="uname" />
		<result property="password" column="password" />
		<result property="lastLoginTime" column="lastLoginTime" />
	</resultMap>

	<sql id="Base_Column_List">
	    <![CDATA[
        id id,
        uname uname,
        password password,
        lastLoginTime lastLoginTime
	    ]]>
	</sql>


	<insert id="insertUser" useGeneratedKeys="true" keyProperty="id"
		parameterType="com.simland.core.module.user.entity.User">
	    <![CDATA[
	        INSERT INTO t_user (
		        uname,
		        password,
		        lastLoginTime
	        ) VALUES (
		        	#{uname},
		        	#{password},
		        	#{lastLoginTime}
	        )
	    ]]>
		<selectKey resultType="java.lang.Integer" order="AFTER"
			keyProperty="id">
			SELECT LAST_INSERT_ID() as id
		</selectKey>
	</insert>

	<update id="updateUser">
	    <![CDATA[
        UPDATE t_user SET
        ]]>
		<if test="uname!=null">
			uname = #{uname}
		</if>
		<if test="password!=null">
			password = #{password}
		</if>
		<if test="lastLoginTime!=null">
			lastLoginTime = #{lastLoginTime}
		</if>
	    <![CDATA[  
        WHERE 
	        id = #{id}
    	]]>
	</update>

	<delete id="deleteUser">
    <![CDATA[
        DELETE FROM t_user WHERE
        id = #{id} 
    ]]>
	</delete>

	<select id="getUser" resultMap="UserRM">
		SELECT
		<include refid="Base_Column_List" />
	    <![CDATA[
		    FROM t_user 
	    ]]>
		<where>
			<choose>
				<when test="uname!=null">
					uname = #{uname}
				</when>
				<otherwise>
					id = #{id}
				</otherwise>
			</choose>
		</where>

	</select>

	<select id="getUserList" resultMap="UserRM">
		SELECT
		<include refid="Base_Column_List" />
		FROM t_user
		<include refid="pageWhere" />
	</select>

	<sql id="pageWhere">
		<where>
			<if test="id!=null">
				AND id = #{id}
			</if>
			<if test="uname!=null">
				AND uname = #{uname}
			</if>
			<if test="password!=null">
				AND password = #{password}
			</if>
			<if test="lastLoginTime!=null">
				AND lastLoginTime = #{lastLoginTime}
			</if>
		</where>
	</sql>

	<select id="getUserCount" resultType="int">
		SELECT count(*) FROM t_user
		<include refid="pageWhere" />
	</select>

	<select id="getSplitUserList" resultMap="UserRM">
		SELECT
		<include refid="Base_Column_List" />
		FROM t_user
		<include refid="pageWhere" />

		<if test="sortColumns!=null">
			ORDER BY #{sortColumns}
		</if>
		limit #{endSize},#{pageSize}
	</select>

</mapper>
